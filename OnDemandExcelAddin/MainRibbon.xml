<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>

			<!-- 
        BAŞLANGIÇ SEKMESİ:
        'getVisible' özelliği sayesinde, "Sekmeleri Yükle" butonuna basıldıktan sonra
        bu sekme de butonla birlikte kaybolacaktır.
      -->
			<tab id="tabLoader" label="Eklenti" getVisible="GetVisible_LoadButton">
				<group id="grpLoader" label="Yönetim">
					<button id="btnLoadRibbon"
							label="Sekmeleri Yükle"
							size="large"
							onAction="OnLoadRibbon_Click"
							getVisible="GetVisible_LoadButton"/>
				</group>
			</tab>

			<!-- 
        DİNAMİK KONTROL ŞABLONLARI:
        Bu şablonlar başlangıçta gizlidir. Supabase'den gelen JSON verisine göre
        C# kodu tarafından görünür hale getirilir ve etiketleri ayarlanır.
      -->

			<!-- Test Sekmesi 1 Şablonu -->
			<tab id="tabTest1" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
				<group id="groupA" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
					<button id="btnHello" size="large" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>
				</group>
			</tab>

			<!-- Test Sekmesi 2 Şablonu -->
			<tab id="tabTest2" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
				<group id="groupB" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
					<button id="btnInfo" size="large" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>
				</group>
			</tab>

		</tabs>
	</ribbon>
</customUI>