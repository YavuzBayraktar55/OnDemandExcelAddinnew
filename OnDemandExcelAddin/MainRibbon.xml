<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<tab id="tabLoader" label="Eklenti" getVisible="GetVisible_LoadButton">
				<group id="grpLoader" label="Yönetim">
					<button id="btnLoadRibbon" label="Sekmeleri Yükle" size="large" onAction="OnLoadRibbon_Click" getVisible="GetVisible_LoadButton"/>
				</group>
			</tab>

			<!-- Test Sekmesi 1 Şablonu -->
			<tab id="tabTest1" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
				<group id="groupA" getLabel="GetLabel" getVisible="GetVisible_Dynamic">

					<button id="btnHello" size="large" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>

					<!-- 
						splitButton NİHAİ YAPI:
						- getVisible: Sadece ana <splitButton> etiketinde bulunur.
						- getLabel: Ana <splitButton> etiketinde bulunmaz, çünkü etiketi yoktur.
						- Etiket, içindeki <button id="splitMain"> tarafından yönetilir.
					-->
					<splitButton id="splitBtnExample" size="large" getVisible="GetVisible_Dynamic">
						<button id="splitMain" onAction="OnAction" getLabel="GetLabel"/>
						<menu>
							<button id="splitAlt1" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>
							<button id="splitAlt2" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>
							<button id="splitAlt3" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>
						</menu>
					</splitButton>

				</group>
			</tab>

			<!-- Test Sekmesi 2 Şablonu -->
			<tab id="tabTest2" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
				<group id="groupB" getLabel="GetLabel" getVisible="GetVisible_Dynamic">
					<button id="btnInfo" size="large" getLabel="GetLabel" onAction="OnAction" getVisible="GetVisible_Dynamic"/>
				</group>
			</tab>

		</tabs>
	</ribbon>
</customUI>